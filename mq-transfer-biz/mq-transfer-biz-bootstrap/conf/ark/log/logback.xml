<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="springApplicationName" value="mq-transfer-container" />
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%thread] [%logger{50}:%L] - %msg%n" />

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
	　　<pattern>${LOG_PATTERN}</pattern>
	　　</encoder>
    </appender>

	<root level="INFO">
　　		<appender-ref ref="CONSOLE" />
　　</root>

</configuration>